    <script>
        const heartContainer = document.getElementById('heart-bg');
        const heartCount = 25;

        for (let i = 0; i < heartCount; i++) {
            createHeart();
        }

        function createHeart() {
            const heart = document.createElementNS("http://www.w3.org/2000/svg", "svg");
            heart.setAttribute("viewBox", "0 0 32 32");
            heart.classList.add("heart");
            
            const path = document.createElementNS("http://www.w3.org/2000/svg", "path");
            path.setAttribute("d", "M16 28.5L14.1 26.7C7.33 20.58 3 16.5 3 11.5 3 7.42 6.42 4 10.5 4c2.31 0 4.52 1.07 6 2.76C17.98 5.07 20.19 4 22.5 4 26.58 4 30 7.42 30 11.5c0 5-4.33 9.08-11.1 15.2L16 28.5z");
            
            heart.appendChild(path);
            
            const size = Math.random() * 25 + 15;
            heart.style.width = `${size}px`;
            heart.style.left = `${Math.random() * 100}vw`;
            heart.style.animationDuration = `${Math.random() * 8 + 7}s, ${Math.random() * 2 + 2}s`;
            heart.style.animationDelay = `-${Math.random() * 15}s, -${Math.random() * 2}s`;
            
            heartContainer.appendChild(heart);
        }

        function sendRSVP() {
            const venue = document.getElementById('venue').value;
            const date = document.getElementById('date').value;
            const time = document.getElementById('time').value;
            const phoneNumber = "254700574125";
            
            const message = `Hi Collins! This is Mercy. I'd love to be your Valentine! ‚ù§Ô∏è %0A%0Aüìç Venue: ${venue} %0AüìÖ Date: ${date} %0A‚è∞ Time: ${time}`;
            
            window.open(`https://wa.me/${phoneNumber}?text=${message}`, '_blank');
        }
    </script>
