    <script>
        // Create falling hearts
        function createEmoji() {
            const emojis = ['‚ù§Ô∏è', 'üíñ', '‚ú®', 'üåπ', 'üíï'];
            const e = document.createElement('div');
            e.className = 'emoji';
            e.innerText = emojis[Math.floor(Math.random() * emojis.length)];
            e.style.left = Math.random() * 100 + 'vw';
            e.style.animationDuration = Math.random() * 3 + 2 + 's';
            e.style.fontSize = Math.random() * 20 + 10 + 'px';
            document.body.appendChild(e);

            setTimeout(() => { e.remove(); }, 5000);
        }
        setInterval(createEmoji, 300);

        // WhatsApp Integration
        function sendRSVP() {
            const venue = document.getElementById('venue').value;
            const date = document.getElementById('date').value;
            const time = document.getElementById('time').value;
            const phoneNumber = "254700574125"; // Reformatted for WhatsApp
            
            const message = `Yes! I'd love to be your Valentine! ‚ù§Ô∏è %0A%0Aüìç Venue: ${venue} %0AüìÖ Date: ${date} %0A‚è∞ Time: ${time}`;
            
            window.open(`https://wa.me/${phoneNumber}?text=${message}`, '_blank');
        }
    </script>
